<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.team6.mapper.CourseMapper">

    <resultMap id="courseResultMap" type="com.team6.pojo.Course">
        <result column="course_id" property="courseId"/>
        <result column="course_name" property="courseName"/>
        <result column="teacher_id" property="teacherId"/>
    </resultMap>



    <select id="findAllClass" resultMap="courseResultMap">
        select course_id, course_name, teacher_id
        from tb_course;
    </select>
    <select id="selectByCourseId" resultMap="courseResultMap">
        select course_id, course_name, teacher_id
        from tb_course
        <where>
            course_id =#{courseId}
        </where>
    </select>

    <select id="selectByTeacherId" resultMap="courseResultMap">
        select course_id, course_name, teacher_id
        from tb_course
        <where>
            teacher_id=#{teacherId}
        </where>
    </select>


    <insert id="add" useGeneratedKeys="true" keyProperty="courseId">
        insert into tb_course(course_name,teacher_id)
        values ( #{courseName},#{teacherId})
    </insert>

    <update id="update">
        update tb_course
        <set>
            <if test="courseName != null">
                course_name=#{courseName},
            </if>
            <if test="teacherId != null">
                teacher_id=#{teacherId}
            </if>
        </set>
        <where>
            course_id=#{courseId}
        </where>
    </update>

    <delete id="delete">
        DELETE from tb_course
        <where>
            course_id=#{courseId}
        </where>
    </delete>
</mapper>